# Prairie Signal Environment Configuration
# Copy this file to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://prairiesignal.ca

# Business Information
NEXT_PUBLIC_BUSINESS_NAME=Prairie Signal
NEXT_PUBLIC_BUSINESS_IMAGE=
NEXT_PUBLIC_BUSINESS_LOGO=/images/PRAIRIESIGNALLOGO.png
NEXT_PUBLIC_BUSINESS_TELEPHONE=
NEXT_PUBLIC_BUSINESS_STREET=
NEXT_PUBLIC_BUSINESS_LOCALITY=Calgary
NEXT_PUBLIC_BUSINESS_REGION=AB
NEXT_PUBLIC_BUSINESS_POSTAL=
NEXT_PUBLIC_BUSINESS_COUNTRY=CA

# Social Media Links
NEXT_PUBLIC_LINKEDIN_URL=
NEXT_PUBLIC_X_URL=
NEXT_PUBLIC_TWITTER_URL=
NEXT_PUBLIC_GITHUB_URL=

# Contact & Booking
NEXT_PUBLIC_BOOKING_URL=
NEXT_PUBLIC_SCHEDULER_URL=

# Analytics (optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=prairiesignal.ca

# Email Service (for contact form)
RESEND_API_KEY=
FROM_EMAIL=noreply@yourdomain.com
TO_EMAIL=contact@yourdomain.com

# Optional Notifications
SLACK_WEBHOOK_URL=

# Optional: Production-grade rate limiting via Upstash Redis REST
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Contact Form Settings (optional)
CONTACT_DISABLE_EMAIL=false
# Image Optimization (optional)
# Comma-separated hostnames for remote images used in next/image
IMAGE_DOMAINS=
